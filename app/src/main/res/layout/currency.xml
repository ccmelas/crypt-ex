<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/currency_card_margin_bottom"
    android:id="@+id/currency"
    app:cardCornerRadius="@dimen/currency_card_corner_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/bitcoin_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/currency_image_height"
                    android:src="@drawable/ic_bitcoin"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/bitcoin_icon"/>
                <TextView
                    android:id="@+id/btc_value"
                    android:layout_below="@id/bitcoin_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/currency_text"
                    tools:text="127,000,000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ethereum_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/currency_image_height"
                    android:src="@drawable/ic_ethereum"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/ethereum_icon"/>
                <TextView
                    android:id="@+id/eth_value"
                    android:layout_below="@id/ethereum_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/currency_text"
                    tools:text="127,000,000"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="monospace"
            tools:text="Naira(N)" />
    </LinearLayout>
</android.support.v7.widget.CardView>